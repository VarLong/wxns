<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_top_bg"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="48dip"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageView
            android:id="@+id/site_nav_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/site_nav_prev" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="48dip"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageView
            android:id="@+id/site_nav_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/site_nav_next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="48dip"
        android:layout_weight="1.0"
        android:gravity="center" >

        <ImageView
            android:id="@+id/site_nav_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/site_nav_refresh" />
    </LinearLayout>

</LinearLayout>