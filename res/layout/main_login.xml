<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:clipToPadding="true"
    android:fitsSystemWindows="true" >

    <WebView
        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/corner_login"
        android:gravity="center"
        android:minHeight="300dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"
                android:background="@drawable/weather_bg" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:text="@string/phone"
                        android:textColor="@color/wechat_android"
                        android:textSize="@dimen/app_14" />

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:text="@string/phone2"
                        android:textColor="@color/wechat_android"
                        android:textSize="@dimen/app_10" />
                </LinearLayout>

                <EditText
                    android:id="@+id/phpneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:padding="5dp"
                    android:text="" >
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="2.0"
                    android:background="@drawable/weather_bg" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/password"
                            android:textColor="@color/wechat_android"
                            android:textSize="@dimen/app_14" />

                        <TextView
                            android:id="@+id/textView31"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/password2"
                            android:textColor="@color/wechat_android"
                            android:textSize="@dimen/app_10" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/passWord"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:padding="5dp"
                        android:text="" >
                    </EditText>
                </LinearLayout>

                <Button
                    android:id="@+id/getPassword"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="3dp"
                    android:background="@drawable/corner_longinbtn_selector"
                    android:text="@string/getpassword"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:gravity="center_vertical" >

                <CheckBox
                    android:id="@+id/chexkbos"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/checkbox_selector"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/agree"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/usertext01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/agreeuser"
                    android:textColor="@color/wechat_android" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp" >

                <Button
                    android:id="@+id/loginone"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/corner_longinbtn_selector"
                    android:padding="5dp"
                    android:text="@string/login"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/wificonent"
                android:textColor="@color/wechat_android"
                android:textSize="@dimen/app_14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/onekeylogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:gravity="bottom" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_tip1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/app_18" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center" >

                <TextView
                    android:id="@+id/textView008"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_tip2"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/app_16" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical" >

                <CheckBox
                    android:id="@+id/chexkbos02"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/checkbox_selector"
                    android:button="@null"
                    android:checked="true" />

                <TextView
                    android:id="@+id/textView004"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:text="@string/agree"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/usertext02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/agreeuser"
                    android:textColor="@color/wechat_android" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/logintwo"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/corner_longinbtn_selector"
                    android:text="@string/loginnow"
                    android:textColor="@color/white"
                    android:textSize="@dimen/app_18" />
            </LinearLayout>

            <TextView
                android:id="@+id/textViewtext02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/wificonent"
                android:textColor="@color/wechat_android"
                android:textSize="@dimen/app_14" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/home_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/LinearLayout1"
        android:layout_marginTop="14dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#88000000" >

        <LinearLayout
            android:id="@+id/lineralayout001"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                style="@style/portalText"
                android:layout_marginTop="10dp"
                android:text="常见问题"
                android:textSize="@dimen/app_14" />

            <TextView
                android:id="@+id/textView2"
                style="@style/portalText"
                android:text="CommonProblems"
                android:textSize="@dimen/app_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineralayout002"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView11"
                style="@style/portalText"
                android:layout_marginTop="10dp"
                android:text="使用说明"
                android:textSize="@dimen/app_14" />

            <TextView
                android:id="@+id/textView12"
                style="@style/portalText"
                android:text="Instruction"
                android:textSize="@dimen/app_10" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lineralayout003"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView21"
                style="@style/portalText"
                android:layout_marginTop="10dp"
                android:text="意见反馈"
                android:textSize="@dimen/app_14" />

            <TextView
                android:id="@+id/textView22"
                style="@style/portalText"
                android:text="Feedback"
                android:textSize="@dimen/app_10" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>