<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
            <corners android:radius="8dp" />

            <solid android:color="@color/exit_bg" />

            <stroke android:width="1.0dp" android:color="@color/app_top_bg" />

            <size android:height="48dp" android:width="100dp" />
        </shape></item>
    <item android:state_pressed="false"><shape android:shape="rectangle">
            <corners android:radius="8dp" />

            <solid android:color="@color/exit_bg" />

            <stroke android:width="1.0dp" android:color="@color/exit_btn_normal" />

            <size android:height="48dp" android:width="100dp" />
        </shape></item>

</selector>